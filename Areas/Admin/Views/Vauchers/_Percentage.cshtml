@model MobiSys.Areas.Admin.ViewModels.PercentageModelView


<h4>Create Pecentage Voucher</h4>
<hr />

<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md">
        <form asp-action="CreatePercentage">
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Percentage" class="control-label"></label>
                <input asp-for="Percentage" class="form-control" />
                <span asp-validation-for="Percentage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Percentage Voucher" asp-action="CreatePercentage" class="btn btn-primary" />
            
            </div>
        </form>
    </div>
</div>