@model MobiSys.Areas.Admin.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit role";
    Layout = "_LayoutAdmin";
}

<h1>Edit Role</h1>


<form method="post" class="mt-3">
    <div class="border m-2 p-2">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="RoleName" disabled class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nobody</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="employees" asp-action="index" class="btn btn-primary" style="width:auto">Modify Users</a>
            <a  asp-controller="administration" asp-action="listroles" class="btn btn-outline-danger" style="width:auto">Back</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}